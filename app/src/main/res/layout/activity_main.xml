<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView

        android:hint="Checking Date"
        android:id="@+id/chDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="29dp"/>



    <TextView
        android:hint="Checkout Date"
        android:id="@+id/choDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="29dp"/>



    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sRoom"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:visibility="invisible"
        android:textSize="20sp"
        android:id="@+id/tvPrice"/>

    <TextView
        android:hint="Adult   Children    Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/etAdult"
            android:layout_width="50dp"
            android:inputType="number"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/etChild"
            android:layout_marginLeft="180dp"
            android:inputType="number"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etRoom"
            android:layout_width="50dp"
            android:inputType="number"
            android:layout_marginLeft="250dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <Button
        android:hint="Calculate"
        android:id="@+id/btnCal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvResult"
        android:layout_margin="10dp"
        android:textSize="20sp"/>



</LinearLayout>